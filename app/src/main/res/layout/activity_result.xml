<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/teal_700"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông Tin Xe"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>

    <!-- Hình ảnh xe -->
    <ImageView
        android:id="@+id/imgCar"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:src="@drawable/car_placeholder"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Biển số xe -->
    <TextView
        android:id="@+id/tvPlateNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Biển số: "
        android:textSize="18sp"
        android:padding="10dp"
        android:background="@drawable/text_background"
        app:layout_constraintTop_toBottomOf="@id/imgCar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Chủ xe -->
    <TextView
        android:id="@+id/tvOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chủ xe: "
        android:textSize="18sp"
        android:padding="10dp"
        android:background="@drawable/text_background"
        app:layout_constraintTop_toBottomOf="@id/tvPlateNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Loại xe -->
    <TextView
        android:id="@+id/tvVehicleType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loại xe: "
        android:textSize="18sp"
        android:padding="10dp"
        android:background="@drawable/text_background"
        app:layout_constraintTop_toBottomOf="@id/tvOwner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Thời gian vào -->
    <TextView
        android:id="@+id/tvEntryTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thời gian vào: "
        android:textSize="18sp"
        android:padding="10dp"
        android:background="@drawable/text_background"
        app:layout_constraintTop_toBottomOf="@id/tvVehicleType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Nút Lưu -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/teal_700"
        android:drawableStart="@drawable/ic_save"
        android:gravity="center"
        android:padding="12dp"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvEntryTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Nút Thoát -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Về danh sách xe"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"
        android:drawableStart="@drawable/ic_exit"
        android:gravity="center"
        android:padding="12dp"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnSave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>
